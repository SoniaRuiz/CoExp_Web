@model CoexpParams
@{
    ViewData["Title"] = "Gene Set Annotation";
}

@Html.HiddenFor(m => m.Category)
@Html.HiddenFor(m => m.Network)
@Html.HiddenFor(m => m.ModuleColor)
@Html.HiddenFor(m => m.Genes)
<header>
    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
    {
        <b>CoExp</b>@*@Html.ActionLink(ViewContext.RouteData.Values["controller"].ToString(), "Index", ViewContext.RouteData.Values["controller"].ToString())*@
    }
    @if (ViewContext.RouteData.Values["action"].ToString() != "Index")
    {
        @:> @Html.ActionLink("Gene Set Annotation", ViewContext.RouteData.Values["action"].ToString(), ViewContext.RouteData.Values["controller"].ToString())
    }
</header>
<div class="row">
    <nav class="col-sm-3 sidebar">
        <br />
        <h4 style="padding-top:12px;">Please, make your selection:</h4>
        <br />

        <div id="tree"></div>


        <label for="genes">Genes:</label>
        <textarea class="form-control" rows="7" id="genes" placeholder="Type your genes ..." style="resize:vertical;"></textarea>

        <br /><br />
        <button id="send_button" class="btn btn-primary">Accept</button>
    </nav>


    <main>
        <nav class="col-sm-9">
            <div id="reportOnGenes_div" style="display:none;">

                <h3><u>Gene Annotation</u></h3>
                <br />
                <table id="reportOnGenes_table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>gene</th>
                            <th>category</th>
                            <th>network</th>
                            <th>ensgene</th>
                            <th>fisher</th>
                            <th>module</th>
                            <th>mm</th>
                            <th>size</th>
                            <th>go_report</th>
                            <th>cell_type_pred</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="summariseClustering_div" style="display:none;">
                <br />
                <h3><u>Summarise Clustering</u></h3>
                <br />
                <table id="summariseClustering_table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>network</th>
                            <th>category</th>
                            <th>module</th>
                            <th>overlap</th>
                            <th>gene</th>
                            <th>fisher</th>
                            <th>size</th>
                            <th>go_report</th>
                            <th>cell_type_pred</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="globalReportOnGenes_div" style="display:none;">
                <br />
                <h3><u>Gene Annotation</u></h3>
                <br />
                <table id="globalReportOnGenes_table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>gene</th>
                            <th>category</th>
                            <th>network</th>
                            <th>ensgene</th>
                            <th>fisher</th>
                            <th>FDR</th>
                            <th>Bonferroni</th>
                            <th>module</th>
                            <th>mm</th>
                            <th>size</th>
                            <th>go_report</th>
                            <th>cell_type_pred</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div id="globalSummariseReportOnGenes_div" style="display:none;">
                <br />
                <h3><u>Summarise Clustering</u></h3>
                <br />
                <table id="globalSummariseReportOnGenes_table" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>network</th>
                            <th>category</th>
                            <th>module</th>
                            <th>overlap</th>
                            <th>gene</th>
                            <th>fisher</th>
                            <th>FDR</th>
                            <th>Bonferroni</th>
                            <th>size</th>
                            <th>go_report</th>
                            <th>cell_type_pred</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <br />
            <div id="error" style="display:none;" class="alert alert-danger">
                <h4>Sorry. An error has occurred.</h4>
            </div>
        </nav>
    </main>
    <div class="modal"><!-- loading layer --></div>

</div><br />
@section Styles{
    <link rel="stylesheet" href="~/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/css/buttons.dataTables.min.css">
    <link rel="stylesheet" href="~/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/fixedColumns.dataTables.min.css" />
    
    <environment include="Development">
        <link rel="stylesheet" href="~/css/custom.dataTables.css" />
        <link type="text/css" rel="stylesheet" href="~/css/simTree.css">
    </environment>
    <environment include="Production,Private">
        <link rel="stylesheet" href="~/css/custom.dataTables.min.css" />
        <link type="text/css" rel="stylesheet" href="~/css/simTree.min.css">
    </environment>
}
@section Scripts{
    <script src="~/js/underscore-min.js"></script>

    <!--Multiselect scripts -->
    <script src="~/js/simTree.min.js"></script>

    <!-- DataTable scripts-->
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script src="~/js/dataTables.bootstrap4.min.js"></script>

    <environment include="Development">
        <script src="~/js/api.js"></script>
    </environment>
    <environment include="Production,Private">
        <script src="~/js/api.min.js"></script>
    </environment>

    <script src="~/js/dataTables.buttons.min.js"></script>
    <script src="~/js/buttons.flash.min.js"></script>
    <script src="~/js/buttons.html5.min.js"></script>
    <script src="~/js/buttons.print.min.js"></script>
    <script src="~/js/jszip.min.js"></script>
    <script src="~/js/pdfmake.min.js"></script>
    <script src="~/js/vfs_fonts.js"></script>


    <script>
        $(document).ready(function () {
            API.prototype.menuInit(3);
            $.fn.dataTable.ext.errMode = 'none';
        });
    </script>
}
